@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .searchClass{
        display:flex;
        justify-content:center;
    }
</style>

<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
<br />

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M => M.Id )</th>
                <th>@Html.DisplayNameFor(M => M.Name )</th>
                <th>@Html.DisplayNameFor(M => M.CreatedAt )</th>
                <th>Details</th>
                <th>update</th>
                <th>delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.CreatedAt.Day)-@Html.DisplayFor(m => item.CreatedAt.Month)-@Html.DisplayFor(m => item.CreatedAt.Year)
                    </td>
                    <partial name="_ButtonsPartialView" model="item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Roles found!!</h3>
    </div>
}